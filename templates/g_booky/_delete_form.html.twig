<form method="post" action="{{ path('app_g_booky_delete', {'id': g_booky.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ g_booky.id) }}">
    {% if is_granted('ROLE_ADMIN') %}
        <button class="custom-button"><i class="fas fa-trash"></i>Delete</button>
   {% endif %}
</form>
