<form method="post" action="{{ path('mybooks_delete', {'id': mybooks.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?' | trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mybooks.id) }}">
    
    <button class="btn btn-light btn-sm"><i class="fas fa-trash"></i> Delete</button>
</form>
